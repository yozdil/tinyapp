<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (!username) { %>
        <div class="d-flex flex-row">
          <form class="p-2 form-inline" action="/login" method="POST">
            <input class="form-control" type="text" name="username" placeholder="username"
              style="width: 300px; margin: 1em" />
            <button type="submit" class="navbar-btn btn btn-primary">Login</button>
          </form>
          <form class="p-2 form-inline" action="/register" method="GET">
            <button type="submit" class="navbar-btn btn btn-primary">Register</button>
          </form>
        </div>
        <% } else { %>
          <form class="form-inline" method="POST" action="/logout">
            <a class="nav-item nav-link inline" style="padding: 20px">Logged in as: <strong>
                <%=username%>
              </strong></a>
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </form>
          <% }; %>
    </div>
  </nav>
</header>